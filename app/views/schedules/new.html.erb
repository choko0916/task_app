<h2>スケジュール新規登録</h2>

<%= form_with model: @schedule do |f| %>
<table class = "new_table">
  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td> 
  </tr>
  <tr>
    <th><%= f.label :start_date, "開始日" %></th>
    <td><%= f.datetime_field :start_date %></td> 
  </tr>
  <tr>
    <th><%= f.label :end_date, "終了日" %></th>
    <td><%= f.datetime_field :end_date %></td> 
  </tr>
  <tr>
    <th><%= f.label :all_day, "終日" %></th>
    <td><%= f.check_box :all_day, {}, "true", "false" %></td> 
  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo %></td> 
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "スケジュールを新規登録する" %></li>
  </ul>
</div>
<% end %>
<%= link_to "スケジュール一覧に戻る", schedules_path %>
